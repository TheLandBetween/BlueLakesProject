<%- include('../partials/head')%>
<%- include('../partials/videoBG')%>

<script language="javascript">
    function passwordChanged() { //Password strength meter
        var strength = document.getElementById('strength');
        var strongRegex = new RegExp("^(?=.{14,})(?=.*[A-Z])(?=.*[a-z])(?=.*[0-9])(?=.*\\W).*$", "g");
        var mediumRegex = new RegExp("^(?=.{10,})(((?=.*[A-Z])(?=.*[a-z]))|((?=.*[A-Z])(?=.*[0-9]))|((?=.*[a-z])(?=.*[0-9]))).*$", "g");
        var enoughRegex = new RegExp("(?=.{8,}).*", "g");
        var pwd = document.getElementById("password");
        if (pwd.value.length == 0) {
            strength.innerHTML = 'Type Password';
        } else if (false == enoughRegex.test(pwd.value)) {
            strength.innerHTML = 'More Characters (At least 8)';
        } else if (strongRegex.test(pwd.value)) {
            strength.innerHTML = '<span style="color:green">Strong!</span>';
        } else if (mediumRegex.test(pwd.value)) {
            strength.innerHTML = '<span style="color:orange">Medium! (Add symbols, capitals, numbers)</span>';
        } else {
            strength.innerHTML = '<span style="color:red">Weak! (Add symbols, capitals, numbers)</span>';
        }
    }
</script>

<div class="container centerLogin d-flex justify-content-center">
    <div class="container bg-light login-bg d-flex flex-column align-items-center justify-content-center overflow-auto">
        <%- include('../partials/flash') %>
        <div class="row header d-flex">
            <div class="col-sm-12 d-flex justify-content-center"><h1 class="display-4">Register</h1></div>
        </div>
        <div class="row header">
            <form action="/register" method="POST" class="needs-validation" name="submit" novalidate>
                <div class="form-group">
                    <!-- date input, sent under 'date' label-->
                    <label class='form-label' for="username">Email: </label> <!-- User enters a email, must be in email format -->
                    <input type="email" id="username" placeholder="sample@google.ca" name="username" class="form-control" required>
                    <!-- Option to have, can also give negative feedback to suggest formatting or smth -->
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="form-group">
                    <!-- date input, sent under 'date' label-->
                    <label class='form-label' for="firstName">First Name: </label>
                    <input type="text" id="firstName" placeholder="Jane" name="firstName" class="form-control" required>
                    <!-- Option to have, can also give negative feedback to suggest formatting or smth -->
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="form-group">
                    <!-- date input, sent under 'date' label-->
                    <label class='form-label' for="lastName">Last Name: </label>
                    <input type="text" id="lastName" placeholder="Doe" name="lastName" class="form-control" required>
                    <!-- Option to have, can also give negative feedback to suggest formatting or smth -->
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="form-group">
                    <!-- date input, sent under 'date' label-->
                    <label class='form-label' for="organization">Organization: </label> <!-- User is not required to input an organization -->
                    <input type="text" id="organization" placeholder="Associated Organization (Optional)" name="organization" class="form-control">
                    <!-- Option to have, can also give negative feedback to suggest formatting or smth -->
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="form-group">
                    <!-- date input, sent under 'date' label-->
                    <label class='form-label' for="password">Password: </label> <!-- Password must be 8 characters long -->
                    <input type="password" id="password" pattern=".{8,}" placeholder="Doe" name="password" class="form-control" onkeyup="return passwordChanged();" required>
                    <!-- Option to have, can also give negative feedback to suggest formatting or smth -->
                    <span id="strength">Password Strength</span>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="form-group">
                    <label class="radio-inline" for="distMeasurement">
                        <input class="form-control" type="radio" id="cm" name="distMeasurement" value="cm" required checked>Centimeters
                    </label>
                    <label class="radio-inline" for="distMeasurement">
                        <input class="form-control" type="radio" id="inch" name="distMeasurement" value="inch" required>Inches
                    </label>
                </div>
                <div class="row">
                    <div class="col-md-12 col-lg-3"></div>
                    <div class="col-md-12 col-lg-6">
                        <button type="submit" class="btn btn-outline-primary btn-block">Register</button>
                    </div>
                    <div class="col-md-12 col-lg-3"></div>
                </div>
            </form>
        </div>

        <div class="row d-flex flex-column header">
            <a href="/login">Back to Login</a>
        </div>
    </div>
</div>

<script>
    // Example starter JavaScript for disabling form submissions if there are invalid fields
    (function() {
        'use strict';

        const forms = document.querySelectorAll('.needs-validation')

        Array.from(forms).forEach(function(form) {
            form.addEventListener('submit', function(event) {
                if (!form.checkValidity()) {
                    event.preventDefault()
                    event.stopPropagation()
                }

                form.classList.add('was-validated')
            }, false)
        })
    })();
</script>
