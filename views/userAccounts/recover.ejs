<%- include('../partials/head')%>
<div class="container bg-light main-bg d-flex align-items-center overflow-auto">
    <div class="container">
        <h1>Account Recovery</h1>
        <form action="/forgot" method="POST" class="needs-validation" name="login" novalidate>
            <div class="form-group">
                <!-- date input, sent under 'date' label-->
                <label class='form-label' for="recovery_code">Recovery Code: </label>
                <input type="text" id="recovery_code" placeholder="Email Code" name="recovery_code" class="form-control" required>
                <!-- Option to have, can also give negative feedback to suggest formatting or smth -->
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="form-group">
                <!-- date input, sent under 'date' label-->
                <label class='form-label' for="password">Password: </label>
                <input type="password" id="password" placeholder="New Password" name="password" class="form-control" required>
                <!-- Option to have, can also give negative feedback to suggest formatting or smth -->
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="form-group">
                <!-- date input, sent under 'date' label-->
                <label class='form-label' for="password_verify">Re-Enter Password: </label>
                <input type="password" id="password_verify" placeholder="Re-type New Password" name="password_verify" class="form-control" required>
                <!-- Option to have, can also give negative feedback to suggest formatting or smth -->
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
    </div>
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm">
            <button type="submit" class="btn btn-outline-primary btn-block">Submit</button>
        </div>
        <div class="col-sm-3"></div>
    </div>
    </form>
    <a href="/login">Back to Login</a>