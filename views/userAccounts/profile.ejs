<!-- include the partial at the top of the file-->
<%- include('../partials/head')%>
<%- include('../partials/navbar')%>
<%- include('../partials/videoBG')%>

<div class="centerDiv d-flex align-items-center">
    <div class="container main-bg d-flex flex-column align-items-center justify-content-between bg-light">
       <%- include('../partials/flash') %>
        <div class="row header d-flex flex-column text-center">
            <h1 class="display-2">Your Profile</h1>
        </div>
        <div class="row">
            <div class="col-12">
                <!-- Name -->
                <div class="row">
                    <div class="col-md-2 d-flex flex-column justify-content-center text-end">
                        <i class="fa fa-tag fa-2x"></i>
                    </div>
                    <div class="col-md-10 d-flex flex-column">
                        <h3 class="marginStrip"><%=currentUser.firstName + ' ' + currentUser.lastName%></h3>
                        <h5 class="text-muted">Name</h5>
                    </div>
                </div>
                <!-- Email -->
                <div class="row">
                    <div class="col-md-2 d-flex flex-column justify-content-center text-end">
                        <i class="fa fa-envelope fa-2x"></i>
                    </div>
                    <div class="col-md-10 d-flex flex-column">
                        <h3 class="marginStrip"><%= currentUser.username %></h3>
                        <h5 class="text-muted">Email</h5>
                    </div>
                </div>
                <!-- Organization -->
                <div class="row">
                    <div class="col-md-2 d-flex flex-column justify-content-center text-end">
                        <i class="fa fa-building fa-2x"></i>
                    </div>
                    <div class="col-md-10 d-flex flex-column">
                        <h3 class="marginStrip"><%=currentUser.organization %></h3>
                        <h5 class="text-muted">Organization</h5>
                    </div>
                </div>
                <!-- Weight/Dist Preferences -->
                <div class="row">
                    <div class="col-md-2 d-flex flex-column justify-content-center text-end">
                        <i class="fa fa-shopping-bag fa-2x"></i>
                    </div>
                    <div class="col-md-10 d-flex flex-column">
                        <h3 class="marginStrip"><%=currentUser.weightPref%> / <%= currentUser.distPref%></h3>
                        <h5 class="text-muted">Weight / Distance</h5>
                    </div>
                </div>
            </div>
        </div>
        <% if(currentUser && currentUser.rank === 3) {%> <!-- User must be rank 3 (administrator) to assign another users rank -->
        <div class="row">
            <h4>Set User Rank</h4>
            <h6 class="text-center">Rank Options</h6>
            <div class="col-md-12 col-lg-4">Angler</div>
            <div class="col-md-12 col-lg-4">Researcher</div>
            <div class="col-md-12 col-lg-4">Administrator</div>

            <div class="row d-flex">
                <form action="/updateRank" method="post" class="text-center needs-validation form-inline pageForm" name="submitUpdateUser" novalidate>
                    <div class="mb-3 col-sm-12 d-flex justify-content-between sectionHeader">
                        <div class="col-sm-6 d-flex align-items-center justify-content-center">
                            <label class='form-label' for="update_username">Email: </label> <!-- Email of the account to update -->
                            <input type="email" id="update_username" placeholder="user@host.com" name="update_username" class="form-control" required>
                        </div>
                        <div class="col-sm-6 d-flex align-items-center justify-content-center">
                            <label class='form-label' for="update_rank">Rank: </label> <!-- Desired rank, must be within 1 and 3 -->
                            <input type="number" min="1" max="3" id="update_rank" value="1" name="update_rank" class="form-control" required>
                        </div>
                    </div>
                    <div class="mb-3 col-12">
                        <div class="col-md-12 col-lg-3"></div>
                        <div class="col-md-12 col-lg-6">
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-outline-primary">Update Rank</button>
                            </div>
                        </div>
                        <div class="col-mg-12 col-lg-3"></div>
                    </div>
                </form>
            </div>
            <% } %>
        </div>
    </div>
</div>
<!-- Include proper closing tags -->
<%- include('../partials/foot')%>

<script>
    (function() {
        'use strict';

        const forms = document.querySelectorAll('.needs-validation')

        Array.from(forms).forEach(function(form) {
            form.addEventListener('submit', function(event) {
                if (!form.checkValidity()) {
                    event.preventDefault()
                    event.stopPropagation()
                }

                form.classList.add('was-validated')
            }, false)
        })
    })();
</script>
