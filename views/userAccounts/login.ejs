<%- include('../partials/head')%>
<div class="container bg-light main-bg d-flex align-items-center overflow-auto">
    <div class="container">
        <%- include('../partials/flash') %>
        <h1>Login</h1>
        <form action="/login" method="POST" class="needs-validation" name="login" novalidate>
            <div class="form-group">
                <!-- date input, sent under 'date' label-->
                <label class='form-label' for="username">Email</label>
                <input type="email" id="username" placeholder="user@host.com" name="username" class="form-control" required>
                <!-- Option to have, can also give negative feedback to suggest formatting or smth -->
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="form-group">
                <!-- date input, sent under 'date' label-->
                <label class='form-label' for="password">Password</label>
                <input type="password" id="password" placeholder="Password" name="password" class="form-control" required>
                <!-- Option to have, can also give negative feedback to suggest formatting or smth -->
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3"></div>
                <div class="col-sm">
                    <button type="submit" class="btn btn-outline-primary btn-block">Login</button>
                </div>
                <div class="col-sm-3"></div>
            </div>
        </form>
        <a href="/register">Register</a>
        <br/> <!-- REPLACE LATER -->
        <a href="/forgot">Forgot Password</a>
