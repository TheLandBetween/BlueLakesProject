<%- include('../partials/head')%>
<div class="container bg-light main-bg d-flex align-items-center overflow-auto">
    <div class="container">
        <%- include('../partials/flash') %>
        <h1>Update Organization</h1>
        <form action="/updateOrganization" method="POST" class="needs-validation" name="updateOrganization" novalidate>
            <input class="form-control" value="<%=currentUser.username%>" type="hidden" id="username" name="username"> <!-- Hidden input for requesting users username -->
            <div class="form-group">
                <label class='form-label' for="organization">First Name: </label> <!-- Filled with current organization, user can change and submit a new organization -->
                <input type="text" value="<%=currentUser.organization%>" id="organization" placeholder="Your Organization" name="organization" class="form-control" required>
            </div>
            <div class="row">
                <div class="col-sm-3"></div>
                <div class="col-sm">
                    <button type="submit" class="btn btn-outline-primary btn-block">Update Organization</button>
                </div>
                <div class="col-sm-3"></div>
            </div>
        </form>
