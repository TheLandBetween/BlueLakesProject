<div class="card">
    <div class="card-header">
        <a data-toggle="collapse" href="#collapse-example" aria-expanded="true" aria-controls="collapse-example" id="heading-example" class="d-block">
            <i class="fa fa-chevron-down pull-right"></i>
            Fish
        </a>
    </div>
    <div id="collapse-example" class="collapse show" aria-labelledby="heading-example">
        <div class="card-body">
            <div class="form-group">
                <label class="form-label" for="species">Species: </label>
                <input class="form-control" type="text" id="species" placeholder="Species of Fish" name="species">
            </div>
            <div class="form-group">
                <label class="form-label" for="length">Length: </label>
                <input class="form-control" type="text" id="length" placeholder="Length of Fish" name="length">
            </div>
            <div class="form-group">
                <label class="radio-inline" for="Length_Metric">
                    <input class="form-control" type="radio" id="centimeters" name="Length_Metric" value="m" required checked>Centimeters
                </label>
                <label class="radio-inline" for="Length_Metric">
                    <input class="form-control" type="radio" id="inches" name="Length_Metric" value="i" required>Inches
                </label>

            </div>
            <div class="form-group">
                <label class="form-label" for="weight">Weight: </label>
                <input class="form-control" type="text" id="weight" placeholder="Weight of Fish" name="weight">
            </div>
            <div class="form-group">
                <label class="radio-inline" for="Weight_Metric">
                    <input class="form-control" type="radio" id="pounds" name="Weight_Metric" value="l" required checked>Pounds
                </label>
                <label class="radio-inline" for="Weight_Metric">
                    <input class="form-control" type="radio" id="kilograms" name="Weight_Metric" value="k" required>Kilograms
                </label>
            </div>
        </div>

    </div>
</div>