<!-- include the partial at the top of the file-->
<%- include('../partials/head')%>
<%- include('../partials/navbar')%>
<%- include('../partials/videoBG')%>
<div class="container bg-light main-bg d-flex align-items-center overflow-auto">
    <div class="container">
        <%- include('../partials/flash')%>
        <h2>Date Generated: <%= foundReport.date_generated.getUTCDate() + '-' + (foundReport.date_generated.getUTCMonth() + 1) + '-' + foundReport.date_generated.getUTCFullYear() %></h2>
        <h2>Creator: <%= foundReport.creator.firstName + ' ' + foundReport.creator.lastName %></h2>

        <br>

        <h4>Level of Concern: <%= foundReport.level_of_concern %></h4>

        <br>

        <h4>Notes: <%= foundReport.notes%></h4>
        <h4>Perc Shore Devd: <%= foundReport.perc_shore_devd%></h4>

        <% if (foundDoTemp.length) { %>
            <table class="table">
                <tr>
                    <th>Temperature</th>
                    <th>Dissolved Oxygen</th>
                    <th>Coordinates</th>
                </tr>

                <% foundDoTemp.forEach(function (entry) { %>
                    <tr>
                        <td><%= entry.temperature%></td>
                        <td><%= entry.dissolvedOxygen%></td>
                        <td><%= entry.location.coordinates%></td>
                    </tr>
                <%})%>
            </table>
        <%}%>

        <% if (foundSecchi.length) { %>
            <table class="table">
                <tr>
                    <th>Secchi</th>
                    <th>Coordinates</th>
                </tr>

                <% foundSecchi.forEach(function (entry) { %>
                    <tr>
                        <td><%= entry.secchi%></td>
                        <td><%= entry.location.coordinates%></td>
                    </tr>
                <%})%>
            </table>
        <%}%>

        <% if (foundPhosphorus.length) { %>
            <table class="table">
                <tr>
                    <th>Phosphorus</th>
                    <th>Coordinates</th>
                </tr>

                <% foundPhosphorus.forEach(function (entry) { %>
                    <tr>
                        <td><%= entry.phosphorus%></td>
                        <td><%= entry.location.coordinates%></td>
                    </tr>
                <%})%>
            </table>
        <%}%>

        <% if (foundCalcium.length) { %>
            <table class="table">
                <tr>
                    <th>Calcium</th>
                    <th>Coordinates</th>
                </tr>
                <% foundCalcium.forEach(function (entry) { %>
                    <tr>
                        <td><%= entry.calcium%></td>
                        <td><%= entry.location.coordinates%></td>
                    </tr>
                <%})%>
            </table>
        <%}%>

        <br>
        <% if(currentUser && foundReport.creator.equals(currentUser._id)) { %>
        <a href="/lakeReports/<%= foundReport._id%>/edit" class="btn btn-outline-secondary btn-block" role="button" aria-disabled="true">Edit Report</a>
        <form action='/anglerReports/<%= foundReport._id %>?_method=DELETE' method="POST">
            <button class="btn btn-block btn-outline-danger"> Delete </button>
        </form>
        <% } %>

        <a href="/lakeReports" class="btn btn-outline-secondary btn-block" role="button" aria-disabled="true">View All Reports</a>
</div>
