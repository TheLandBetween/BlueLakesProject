<!-- include the partial at the top of the file-->
<%- include('../partials/head')%>
<%- include('../partials/navbar')%>
<div class="container bg-light main-bg d-flex align-items-center overflow-auto">
        <div class="container">
        <%- include('../partials/flash') %>
        <h1 class="text-center">New Angler Report</h1>
        <form action="/anglerReports" method="post" class="text-center needs-validation" name="submit" novalidate>
            <h2>General Information</h2>
            <div class="form-group">
                <label class="form-label" for="lake_town_fk">Lake Town: </label>
                <input class="form-control" type="text" id="lake_town_fk" placeholder="Lake Town" name="lake_town_fk" required>
            </div>
            <div class="form-group">
                <label class="form-label" for="date">Date: </label>
                <input class="form-control" type="date" id="date" placeholder="year-mo-dy" name="date" required>
            </div>
            <div class="form-group">
                <label class="form-label" for="t_start">Time In: </label>
                <input  class="form-control" type="text" id="t_start" placeholder="hh:mm" name="t_start" required>
            </div>
            <div class="form-group">
                <label class="form-label" for="t_end">Time Out: </label>
                <input  class="form-control" type="text" id="t_end" placeholder="hh:mm" name="t_end" required>
            </div>
            <h2>Fish Caught</h2>
            <%- include('../partials/fish')%>

            <button onclick="" class="btn btn-outline-secondary">Add Fish</button>

            <div class="row">
                <div class="col-sm-3"></div>
                <div class="col-sm">
                    <button type="submit" class="btn btn-outline-primary btn-block">Submit</button>
                </div>
                <div class="col-sm-3"></div>
            </div>
        </form>


        <br> <!-- TODO: REMOVE THIS, FORMAT PROPERLY -->
        <div class="row">
            <div class="col-sm-2"></div>
            <div class="col-sm">
                <a href="/anglerReports" class="btn btn-outline-secondary btn-block">All Reports</a>
            </div>
            <div class="col-sm-2"></div>
        </div>
<!-- include footer partial -->
<%- include('../partials/foot')%>

<script>
    // Example starter JavaScript for disabling form submissions if there are invalid fields
    (function() {
        'use strict';

        console.log("here");

        const forms = document.querySelectorAll('.needs-validation')

        Array.from(forms).forEach(function(form) {
            form.addEventListener('submit', function(event) {
                if (!form.checkValidity()) {
                    event.preventDefault()
                    event.stopPropagation()
                }

                form.classList.add('was-validated')
            }, false)
        })
    })();
</script>