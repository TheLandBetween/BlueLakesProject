<!-- include the partial at the top of the file-->
<%- include('../partials/head')%>
    <h1 class="text-center">New Angler Report</h1>
    <form action="/anglerReports" method="post" class="text-center" name="submit">
        <div class="form-group">
            <!-- date input, sent under 'date' label-->
            <label for="Date_Generated">Date: </label>
            <input type="text" id="Date_Generated" placeholder="year-mo-dy" name="Date_Generated">
        </div>
        <div class="form-group">
            <label for="Time_In">Time In: </label>
            <input type="text" id="Time_In" placeholder="hh:mm" name="Time_In">
        </div>
        <div class="form-group">
            <label for="Time_Out">Time Out: </label>
            <input type="text" id="Time_Out" placeholder="hh:mm" name="Time_Out">
        </div>
        <div class="form-group">
            <label for="Species">Time Out: </label>
            <input type="text" id="Species" placeholder="Species of Fish" name="Species">
        </div>
        <div class="form-group">
            <label for="Length">Length: </label>
            <input type="text" id="Length" placeholder="Length of Fish" name="Length">
        </div>
        <div class="form-group">
            <label for="Length_Metric">Centimeters: </label>
            <input type="radio" id="centimeters" name="Length_Metric" value="m">
            <label for="Length_Metric">Inches: </label>
            <input type="radio" id="inches" name="Length_Metric" value="i">
        </div>
        <div class="form-group">
            <label for="Species">Weight: </label>
            <input type="text" id="Weight" placeholder="Weight of Fish" name="Weight">
        </div>
        <div class="form-group">
            <label for="Weight_Metric">LB: </label>
            <input type="radio" id="pounds" name="Weight_Metric" value="l">
            <label for="Weight_Metric">KG: </label>
            <input type="radio" id="kilograms" name="Weight_Metric" value="k">
        </div>


        <div class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm">
                <button type="submit" class="btn btn-outline-primary btn-block">Submit</button>
            </div>
            <div class="col-sm-3"></div>
        </div>
    </form>


    <br> <!-- TODO: REMOVE THIS, FORMAT PROPERLY -->
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm">
            <a href="/anglerReports" class="btn btn-outline-secondary btn-block">All Reports</a>
        </div>
        <div class="col-sm-2"></div>
    </div>
<!-- include footer partial -->
<%- include('../partials/foot')%>
