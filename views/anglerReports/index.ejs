
<!-- include the partial at the top of the file-->
<%- include('../partials/head')%>
<%- include('../partials/navbar')%>
<div class="container bg-light main-bg d-flex align-items-center overflow-auto">
    <div class="container">
        <h1 class="text-center">All Recent Angler Reports</h1>
            <div class="row" style="height: 20vh;">
                <div class="col-sm-1"></div>
                <div class="col-sm bg-white border border-primary">Angler Statistics and Graphs</div>
                <div class="col-sm-1"></div>
            </div>
        <ul>
            <!-- iterate through each matched report passed in and display in a li-->
            <!--TODO: boostrap cards-->
            <% for (let report of anglerReports) {%>
                <li>
                    <b><%= report.creator.firstName + ' ' + report.creator.lastName%></b> - <%= report.date %>
                    <a href="/anglerReports/<%= report.id%>">details</a>
                </li>
            <% } %>
        </ul>
        <div class="row">
            <div class="col-sm-2"></div>
            <div class="col-sm">
                <!-- Link to submit new report-->
                <a href="/anglerReports/new" class="btn btn-outline-primary btn-block" role="button" aria-disabled="true">New Report</a>
            </div>
            <div class="col-sm-2"></div>
        </div>
    </div>
<!-- include footer partial -->
<%- include('../partials/foot')%>

